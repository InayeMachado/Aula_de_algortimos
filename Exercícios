/////////////////////////Exercício 1 -  Descubra a multiplicação entre dois valores lidos e salve em uma variável.
//Está fazendo a multiplicação errada

#include <stdio.h>
int main()
{
   int valor1, valor2;
   float result;
   
    printf("Informe o 1° valor \n");
    scanf("%d", &valor1);
    
    printf("Informe o 2° valor\n");
    scanf("%d", &valor2);
    
    result = valor1 * valor2;
    
    printf("A multiplicação entre os dois valores é:\n %.0f",result);

   return 0;

}

//////////////////////////// Exercício 2 - Faça a média aritmética de três valores lidos e salve em uma variável.

#include <stdio.h>

int main()
{
    int valor1, valor2, valor3;
    float totsoma, valorfinal;
    
    printf("Informe o 1° valor\n");
    scanf("%d", &valor1);
    
    printf("Informe o 2° valor \n");
    scanf("%d", &valor2);
    
    printf("Informe o 3° valor \n");
    scanf("%d", &valor3);
    
    totsoma = valor1 + valor2 + valor3;
    valorfinal = totsoma /3;
    
    printf("A média dos três números é: %.2f", valorfinal);

    return 0;
}


//////////////////////////////////////////////// Exercício 3 - Dado um número lido defina o anterior e o próximo.

#include <stdio.h>

int main()
{
    
    float Numero1, Anterior, Posterior;
    
    printf("Informe um número \n");
    scanf("%f", &Numero1);
    
    Anterior = Numero1 - 1;
    printf("O numero anterior é: %.2f \n", Anterior);
    
    Posterior = Numero1 + 1;
    printf ("O número Posterior é: %.2f \n", Posterior);
   
    return 0;
}

//////////////////////////////////////////////// Exercício 4 - Dado um número lido descubra qual a terça parte deste número.
#include <stdio.h>

int main()
{
    
    float valor, tercaparte;
    printf("Informe um número e descubra sua terça parte!\n");
    scanf("%f", &valor);
    
    tercaparte = valor/3;
    printf("A terça parte do número digitado é:  %.2f", tercaparte);
    

    return 0;
}


/******************************************************************************

6 - Calcule o valor de um montante lido em reais 
convertido em dólares.

*******************************************************************************/
#include <stdio.h>

int main()
{
    float Dolar, Real, Cota;
    
    printf("Digite a Cotação do dolar atualmente\n");
    scanf("%f", &Cota);
    
    printf("Digite um valor em R$ que será convertido para dolar.\n");
    scanf("%f", &Real);
    
    Dolar = Real/Cota;
    printf("O valor em dolar é:%f", Dolar);

    return 0;
}

*******************************************************************************/ Exercício 8 - Existindo 4 variáveis A, B, C e D você deverá somar e 
multiplicar A com B, A com C e A com D, depois B com C, B 
com D e por fim C com D.

#include <stdio.h>

int main()
{
     int a, b, c, d, Multi, Soma;
    
    printf("Informe o valor para A");
    scanf("%d", &a);
    
    printf("Informe o valor para A");
    scanf("%d", &b);
    
    printf("Informe o valor para A");
    scanf("%d", &C);
    
    printf("Informe o valor para A");
    scanf("%d", &D);
    
    
    
    printf("A Soma de A e B é: %d", Multi);
    
    printf("A Soma de A e C é: %d", Multi);
    
    printf("A Soma de A e D é: %d", Multi);
    
    printf("A Soma de B e C é: %d", Multi);
    
    printf("A Soma de B e D é: %d", Multi);
    
    printf("A Soma de C e D é: %d", Multi);
    
    
    
    printf("A Multiplicação de A por B é: %d", Multi);
    
    printf("A Multiplicação de A por C é: %d", Multi);
    
    printf("A Multiplicação de A por D é: %d", Multi);
    
    printf("A Multiplicação de B por C é: %d", Multi);
    
    printf("A Multiplicação de B por D é: %d", Multi);
    
    printf("A Multiplicação de C por D é: %d", Multi);

    return 0;
}
